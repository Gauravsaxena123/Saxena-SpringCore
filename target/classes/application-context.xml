<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

<bean name="emp1" class="com.my.spring.Model.Employee">
<property name="id" value="1001"/>
<property name="name" value="Harsh"/>
<property name="gender" value="male"/>
</bean>

<bean name="emp2" class="com.my.spring.Model.Employee">
<constructor-arg name="id" value="1002"/>
<constructor-arg name="name" value="vansh"/>
<constructor-arg name="gender" value="male"/>
</bean>


</beans>